{
  "name": "dotfiles",
  "version": "3.0.0",
  "description": "my os, apps, dotfiles & dev env",
  "repository": "https://github.com/jthegedus/dotfiles.git",
  "author": "James Hegedus",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write **/*.{json,md}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{sh}": [
      "shellcheck"
    ]
  },
  "devDependencies": {
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.17.1"
  }
}
