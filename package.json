{
  "name": "dotfiles",
  "version": "2.0.0",
  "description": "my OS & dotfile setup",
  "repository": "https://github.com/jthegedus/dotfiles.git",
  "author": "James Hegedus",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write **/*.{json,md}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.{sh}": ["shellcheck"]
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^1.0.0-rc.2",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1"
  }
}
